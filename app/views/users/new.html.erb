<%= provide(:title, "Sign up") %>
<%= render 'header' %>
<h1 class = "title-sign_up" >Sign up form </h1>

<div class="col-md-6 col-md-offset-3" class = "form-sign_up">
    <%= form_for(@user) do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
        <%= f.submit "Sign Up", class: "btn btn-primary" %>
    <% end %>
</div>