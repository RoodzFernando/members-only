<%= provide(:title, "Edit | " + @user.name) %>

    <%= form_for @user do |f| %>
    <div class = "form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
    </div>
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %>
    <%= f.submit "Update" , class: 'btn btn-primary' %>
<% end %>
